@page
@model NewPageModel

<h1>Lab 10</h1>
<hr />
<div class ="container">
    <div class ="row">
        <div class ="col-4 border border-primary">
            <form method="post">
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CreditCardNumber" class="control-label"></label>
                    <input asp-for="CreditCardNumber" class="form-control" />
                    <span asp-validation-for="CreditCardNumber" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class = "col-8 border border-danger">
            <img src ="image.png" width = 250 length = 250>
        </div>
    </div>
    <div class ="row">
        <div class ="col-2 border border-warning">
            Column One
        </div>
        <div class ="col-6 border border-dark">
            Column Two
        </div>
        <div class ="col-4 border border-info">
            Column Three
        </div>
    </div>
</div>

<div class ="text-center">
    <span>@Model.FirstName @Model.LastName</span>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}